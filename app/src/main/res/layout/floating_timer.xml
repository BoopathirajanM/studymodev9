<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/blue_medium">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ProgressBar
                android:id="@+id/circularProgress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:progressDrawable="@drawable/circular_progress"
                android:progress="100"
                android:max="100"
                android:rotation="-90"/>

            <TextView
                android:id="@+id/timerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="48sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:text="25:00"/>

        </FrameLayout>

        <Button
            android:id="@+id/emergencyContactBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Emergency Contact"
            android:layout_marginTop="8dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="@color/blue_dark"/>

        <Button
            android:id="@+id/emergencyAppBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Emergency App"
            android:layout_marginTop="8dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="@color/blue_dark"/>

        <Button
            android:id="@+id/returnToCallBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Access Call Screen"
            android:layout_marginTop="8dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2196F3"
            android:visibility="gone"/>

        <Button
            android:id="@+id/endCallBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="End Call"
            android:layout_marginTop="8dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#E91E63"
            android:visibility="gone"/>

        <Button
            android:id="@+id/stopTimerBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:textSize="30dp"
            android:text="Stop"
            android:alpha="0.0"
            android:background="@android:drawable/btn_default"
            android:textColor="@android:color/white"/>

    </LinearLayout>

</FrameLayout> 